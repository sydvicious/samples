<div class="row" style="margin: 10px;">
  <div class="col-md-12">

    <h1>Arcades</h1>

    <p>
      Tracking <%= Location.count %> locations.
    </p>

    <% if @locations.length > 0 %>

        <table class="table table-striped">

          <% @locations.each do |location| %>
              <tr>
                <td>
                  <h4 class="list-group-item-heading"><%= link_to location.name, edit_admin_location_path(location.id) %></h4>
                  <%= location.description %>
                </td>
                <td style="text-align: right;">

                  <div class="btn-group">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                      Tools <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                      <li><%= link_to 'Edit', edit_admin_location_path(location.id) %></li>
                      <li><%= link_to 'Delete', admin_location_path(location.id), :method => :delete %></li>
                      <% if location.published %>
                          <li><%= link_to 'Unpublish', edit_admin_location_path(location.id) %></li>
                      <% else %>
                          <li><%= link_to 'Publish', edit_admin_location_path(location.id) %></li>
                      <% end %>
                    </ul>
                  </div>
                </td>
              </tr>
          <% end %>

        </table>

        <%= will_paginate @locations, renderer: BootstrapPagination::Rails %>

    <% else %>
        <p>No arcades available.</p>
    <% end %>

  </div>
</div>